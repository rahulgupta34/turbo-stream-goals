<div>
        <%= link_to "New Turbo", new_turbo_path ,class:"nav-link", data: { bs_toggle: "modal",bs_target: "#exampleModal" } %>
    <table class="table" id="turbo">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Handle</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>
            </tr>
        </thead>
        <tbody>
        <% if @turbos.length > 0 %>
            <% @turbos.each do |turbo| %>
                <%= render "turbo/table", turbo: turbo %>
            <% end %>
        <% else %>
            <tr>
              <td col-span="7"><p class="text-center">No Record Found.</p></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
              <td></td>
            </tr>
        <% end %>
        </tbody>
    </table>
</div>

<%= render "turbo/form", turbo: "/turbo" %>


